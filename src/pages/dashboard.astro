---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";

// User is available from middleware via Astro.locals
const user = Astro.locals.user;
const email = user?.email;
---

<Layout title="Dashboard - Blakerunners">
  <div class="min-h-screen flex flex-col">
    <Navigation currentPage="dashboard" />

    <!-- Main Content -->
    <div class="flex-1 px-4 sm:px-6 lg:px-8 py-6 sm:py-12">
      <div class="max-w-5xl mx-auto">
        <div class="mb-8 sm:mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold mb-2 bg-gradient-to-r from-white to-primary-300 bg-clip-text text-transparent">
            Willkommen zur√ºck!
          </h2>
          <p class="text-gray-400 text-base sm:text-lg break-all">{email}</p>
        </div>

        <!-- Feature Cards Grid -->
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 sm:gap-6">
          <!-- Song vorschlagen Card -->
          <a href="/suggest" class="group">
            <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-primary-500/50 transition-all hover:transform hover:scale-105 h-full">
              <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-blue-500 rounded-xl flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-primary-300 transition-colors">
                Song vorschlagen
              </h3>
              <p class="text-gray-400">
                Schlage einen neuen Song mit YouTube-Link vor
              </p>
            </div>
          </a>

          <!-- Abstimmen Card -->
          <a href="/vote" class="group">
            <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-primary-500/50 transition-all hover:transform hover:scale-105 h-full">
              <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-blue-500 rounded-xl flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-primary-300 transition-colors">
                Abstimmen
              </h3>
              <p class="text-gray-400">
                Bewerte vorgeschlagene Songs mit 1-5 Sternen
              </p>
            </div>
          </a>

          <!-- Setliste Card -->
          <a href="/setlist" class="group">
            <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-primary-500/50 transition-all hover:transform hover:scale-105 h-full">
              <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-blue-500 rounded-xl flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-primary-300 transition-colors">
                Setliste ansehen
              </h3>
              <p class="text-gray-400">
                Sieh die Top 20 Songs basierend auf den Bewertungen
              </p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
