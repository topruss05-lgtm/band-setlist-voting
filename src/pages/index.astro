---
import Layout from "../layouts/Layout.astro";

const accessToken = Astro.cookies.get("sb-access-token");
const refreshToken = Astro.cookies.get("sb-refresh-token");

// Redirect to dashboard if already logged in
if (accessToken && refreshToken) {
  return Astro.redirect("/dashboard");
}
---

<Layout title="Blakerunners Setlist">
  <!-- Hero Section -->
  <div class="min-h-screen flex flex-col">
    <!-- Navigation -->
    <nav class="border-b border-white/10 backdrop-blur-sm bg-white/5">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <span class="text-2xl font-bold bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
            Blakerunners
          </span>

          <!-- Desktop Navigation -->
          <div class="hidden sm:flex items-center space-x-4">
            <a href="/signin" class="text-gray-300 hover:text-white transition-colors font-medium">
              Anmelden
            </a>
            <a href="/register" class="bg-primary-600 hover:bg-primary-700 px-4 py-2 rounded-lg font-medium transition-all transform hover:scale-105">
              Registrieren
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="sm:hidden text-gray-300 hover:text-white focus:outline-none" aria-label="Menu öffnen">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="hidden sm:hidden pb-4">
          <div class="flex flex-col space-y-2">
            <a href="/signin" class="text-gray-300 hover:text-white transition-colors font-medium py-2 px-2 rounded hover:bg-white/5">
              Anmelden
            </a>
            <a href="/register" class="text-gray-300 hover:text-white transition-colors font-medium py-2 px-2 rounded hover:bg-white/5">
              Registrieren
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Content -->
    <div class="flex-1 flex items-center">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 w-full">
        <div class="text-center mb-12 sm:mb-16">
          <h1 class="text-4xl sm:text-5xl md:text-7xl font-bold mb-4 sm:mb-6 bg-gradient-to-r from-white via-primary-300 to-blue-400 bg-clip-text text-transparent">
            Setlist Voting
          </h1>
          <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-6 sm:mb-8 max-w-3xl mx-auto px-4">
            Stimme gemeinsam mit deinen Bandmitgliedern über die Songs ab, die in eure Setliste aufgenommen werden sollen
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center px-4">
            <a href="/register" class="bg-gradient-to-r from-primary-600 to-blue-600 hover:from-primary-700 hover:to-blue-700 px-8 py-4 rounded-xl font-semibold text-lg transition-all transform hover:scale-105 shadow-lg shadow-primary-500/50">
              Jetzt starten
            </a>
            <a href="/signin" class="bg-white/10 hover:bg-white/20 backdrop-blur-sm px-8 py-4 rounded-xl font-semibold text-lg transition-all border border-white/20">
              Anmelden
            </a>
          </div>
        </div>

        <!-- Features Grid -->
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 sm:gap-8 mt-12 sm:mt-20">
          <!-- Feature 1 -->
          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-primary-500/50 transition-all hover:transform hover:scale-105">
            <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-blue-500 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4 text-white">Songs vorschlagen</h3>
            <p class="text-gray-400">Schlage neue Songs vor und teile YouTube-Links mit der Band</p>
          </div>

          <!-- Feature 2 -->
          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-primary-500/50 transition-all hover:transform hover:scale-105">
            <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-blue-500 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4 text-white">Abstimmen</h3>
            <p class="text-gray-400">Bewerte Songs mit 1-5 Sternen und schaue dir die Videos direkt an</p>
          </div>

          <!-- Feature 3 -->
          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-primary-500/50 transition-all hover:transform hover:scale-105">
            <div class="w-14 h-14 bg-gradient-to-br from-primary-500 to-blue-500 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-4 text-white">Setliste</h3>
            <p class="text-gray-400">Die Top 20 Songs mit den besten Bewertungen landen in der Setliste</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  </script>
</Layout>
