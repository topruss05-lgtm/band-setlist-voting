---
import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase";

const accessToken = Astro.cookies.get("sb-access-token");
const refreshToken = Astro.cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return Astro.redirect("/signin");
}

let session;
try {
  session = await supabase.auth.setSession({
    refresh_token: refreshToken.value,
    access_token: accessToken.value,
  });
  if (session.error) {
    return Astro.redirect("/signin");
  }
} catch (error) {
  return Astro.redirect("/signin");
}

// Fetch top 20 songs from the view
const { data: topSongs, error } = await supabase
  .from("song_rankings")
  .select("*")
  .limit(20);

// Helper function to extract YouTube video ID
function getYouTubeVideoId(url: string): string | null {
  const patterns = [
    /(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&\n?#]+)/,
    /youtube\.com\/embed\/([^&\n?#]+)/,
  ];

  for (const pattern of patterns) {
    const match = url.match(pattern);
    if (match) return match[1];
  }
  return null;
}
---

<Layout title="Setliste - Band Setlist">
  <nav>
    <div class="nav-content">
      <h1>Band Setlist Voting</h1>
      <div>
        <a href="/dashboard">Dashboard</a>
        <a href="/suggest">Song vorschlagen</a>
        <a href="/vote">Abstimmen</a>
        <a href="/api/auth/signout">Abmelden</a>
      </div>
    </div>
  </nav>
  <div class="container">
    <h2>Top 20 Setliste</h2>
    <p style="margin-bottom: 2rem;">Die besten Songs basierend auf euren Bewertungen</p>

    {topSongs && topSongs.length > 0 ? (
      <div class="setlist">
        {topSongs.map((song: any, index: number) => {
          const videoId = getYouTubeVideoId(song.youtube_url);
          const avgRating = parseFloat(song.avg_rating).toFixed(1);
          const voteCount = song.vote_count;

          return (
            <div class="card setlist-item">
              <div class="rank">#{index + 1}</div>
              <div class="song-info">
                <h3>{song.title}</h3>
                <div class="stats">
                  <span class="stat">
                    <span class="star-icon">â˜…</span>
                    {avgRating} ({voteCount} {voteCount === 1 ? 'Bewertung' : 'Bewertungen'})
                  </span>
                </div>

                {videoId && (
                  <details class="video-details">
                    <summary>Video ansehen</summary>
                    <div class="video-container" style="margin-top: 1rem;">
                      <iframe
                        width="100%"
                        height="315"
                        src={`https://www.youtube.com/embed/${videoId}`}
                        title={song.title}
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                      ></iframe>
                    </div>
                  </details>
                )}
              </div>
            </div>
          );
        })}
      </div>
    ) : (
      <div class="card">
        <p>Noch keine Songs in der Setliste. <a href="/suggest" class="link">Schlage einen Song vor</a> und <a href="/vote" class="link">stimme ab</a>!</p>
      </div>
    )}
  </div>

  <style>
    .setlist {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .setlist-item {
      display: flex;
      gap: 1.5rem;
      align-items: flex-start;
    }

    .rank {
      font-size: 2rem;
      font-weight: bold;
      color: var(--primary);
      min-width: 60px;
      text-align: center;
    }

    .song-info {
      flex: 1;
    }

    .song-info h3 {
      margin-bottom: 0.5rem;
    }

    .stats {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
      color: #64748b;
    }

    .stat {
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }

    .star-icon {
      color: #f59e0b;
      font-size: 1.2rem;
    }

    .video-details {
      margin-top: 1rem;
      cursor: pointer;
    }

    .video-details summary {
      color: var(--primary);
      font-weight: 500;
      cursor: pointer;
      user-select: none;
    }

    .video-details summary:hover {
      text-decoration: underline;
    }

    .video-container {
      position: relative;
      padding-bottom: 56.25%;
      height: 0;
      overflow: hidden;
    }

    .video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .card.setlist-item:nth-child(1) .rank {
      color: #fbbf24;
      font-size: 2.5rem;
    }

    .card.setlist-item:nth-child(2) .rank {
      color: #9ca3af;
      font-size: 2.25rem;
    }

    .card.setlist-item:nth-child(3) .rank {
      color: #cd7f32;
      font-size: 2.25rem;
    }
  </style>
</Layout>
